        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="attackOnPile"

        android:layout_weight="1"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
